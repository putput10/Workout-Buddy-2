{{#each posts as |post| }}
<section class="h-100 gradient-form" style="background-color: #eee;">
                <div class="card m-4">
                        <div class="card-header">
                            Title
                        </div>
                        <div class="card-body">
                            <blockquote class="blockquote mb-0">
                                <p>{{post.post}}</p>
                                <footer class="blockquote-footer">{{post.profile.username}}</footer>
                            </blockquote>
                        </div>
                </div>
{{/each}}

                <div class="card m-4">
                        <div class="card-header">
                            <form>
                                <div class="form-group">
                                    <input class="form-control" id="titlePost"  placeholder="Title">
                                </div>
                            </form>
                        </div>
                        <div class="card-body">
                            <blockquote class="blockquote mb-0">
                                <p> 
                                    <form id="postSelector">
                                    <div class="form-group">
                                        <input class="form-control" id="post"  placeholder="Write your Post here">
                                    </div>
                                                    <div class="text-center pt-1 mb-5 pb-1">
                    <button class="btn btn-primary btn-block fa-lg gradient-custom-2 mb-3" type="submit">Post!</button>
                </div>
                                    </form>
                                </p>
                                <footer class="blockquote-footer">GRAB USER USING HANDLEBARS</footer>
                            </blockquote>
                        </div>
                </div>
</section>
<script src='js/post.js'> </script>

